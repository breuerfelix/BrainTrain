                <label>Titel</label>
            </div>
            <div class="col-input col-xs-9">
                <input type="text">
            </div>
            <div class="col-label col-xs-3">
                <label>Frage</label>
            </div>
            <div class="col-input col-xs-9">
                <textarea type="text" rows="6"></textarea>
            </div>
            <div class="col-label col-xs-3">
                <label>Antwort</label>
            </div>
            <div class="col-input col-xs-9">
                <textarea type="text" rows="6"></textarea>
            </div>
            <div class="col-xs-12 col-button center">
                <a href="#" class="button">Speichern</a>
                <a href="#" class="button danger-button">Abbrechen</a>
            </div>
        </div>
