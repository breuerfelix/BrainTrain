{{define "content"}}
<!--content-header start-->
<div class="content-header">
    <div class="ch-title">
        Meine Karteikästen
    </div>
    <div class="ch-subtitle">
        <div>
            Hier findest du deine Karteien, sowie öffentliche Karteien, die du angefangen hast zu lernen.
        </div>
        <div class="ch-subtitle-right">
            <div class="select">
                <select name="sort">
                    <option value="0">Sortieren nach ...</option>
                    <option value="1">Naturwissenschaften</option>
                    <option value="2">Sprachen</option>
                    <option value="3">Gesellschaft</option>
                    <option value="4">Wirtschaft</option>
                    <option value="5">Geisteswissenschaften</option>
                </select>
            </div>
            
            <input class="input" type="text" placeholder="Suche">
        </div>
    </div>
</div>
<!--content-header end-->

{{ $userID := .currentUserID }}
{{ $registers := .registers }}

<div class="categories">

    <!--category start-->
    <div class="cat-title">
        Selbst erstellte Karteikästen
    </div>

    <div class="cat-content">
        {{range $register := $registers}}
        {{if eq $register.user $userID}}
        <div class="cat-card">
            <div class="cc-title">{{$register.category}} > {{$register.subcategory}}</div>
            <div class="cc-content">
                <div class="ccc-header">
                    <div class="ccc-title">{{$register.title}}</div>
                    <div class="ccc-badge">
                        <div class="card-counter">
                            <div class="hexagon hexagon-counter hexagon-display-center">
                                <p>{{$register.amountCards}}</p>
                                <p class="super-small-text">Karten</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ccc-content">
                    {{$register.description}}
                </div>

                <div class="ccc-visibility">Sichtbarkeit:<b style='padding-left:3em;'>
                    {{if $register.private}}privat{{else}}öffentlich{{end}}
                </b></div>
                <div class="ccc-progress">Fortschritt:<b style='padding-left:4em;'>{{$register.progress}}</b></div>

                <div class="ccc-footer">
                    <a href="/learn-register" class="button cpy content-button">Lernen</a>
                </div>
            </div>
        </div>
        {{end}}
        {{end}}
    </div>
    <!--category end-->

    <!--category start-->
    <div class="cat-title">
        Gelernte Karteikästen anderer Nutzer
    </div>

    <div class="cat-content">
        {{range $register := $registers}}
        {{if ne eq $register.user $userID}}
        <div class="cat-card">
            <div class="cc-title">{{$register.category}} > {{$register.subcategory}}</div>
            <div class="cc-content">
                <div class="ccc-header">
                    <div class="ccc-title">{{$register.title}}</div>
                    <div class="ccc-badge">
                        <div class="card-counter">
                            <div class="hexagon hexagon-counter hexagon-display-center">
                                <p>{{$register.amountCards}}</p>
                                <p class="super-small-text">Karten</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ccc-content">
                    {{$register.description}}
                </div>

                <div class="ccc-visibility">Sichtbarkeit:<b style='padding-left:3em;'>
                    {{if $register.private}}privat{{else}}öffentlich{{end}}
                </b></div>
                <div class="ccc-progress">Fortschritt:<b style='padding-left:4em;'>{{$register.progress}}</b></div>

                <div class="ccc-footer">
                    <a href="/learn-register" class="button content-button">Lernen</a>
                    <a href="/edit-register" class="button content-button success-button">Bearbeiten</a>
                    <a href="#" class="button content-button danger-button"><img src='/static/images/icons/delete.svg' width='20px'></img></a>
                </div>
            </div>
        </div>
        {{end}}
        {{end}}
    </div>
    <!--category end-->
</div>
{{end}}